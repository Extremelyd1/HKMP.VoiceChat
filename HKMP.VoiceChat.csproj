            <Private>False</Private>
        </Reference>
        <Reference Include="UnityEngine, Version=0.0.0.0, Culture=neutral, PublicKeyToken=null">
            <HintPath>$(References)\UnityEngine.dll</HintPath>
            <Private>False</Private>
        </Reference>
